@using SchoolProj.Models
@{ 
    var cSatats = (List<myCourseStats>) ViewBag.courseStats;
}


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link rel="stylesheet" href="~/Content/toastr.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.css" />

</head>
<body>
    <div class="container body-content">
        @Html.Partial("_navBar");
        <div class="row">
            <div class="col-3">
                @if (cSatats != null)
                {
                    foreach (var item in cSatats)
                    {
                        @Html.Partial("_courseStatSummery", item);
                    }
                }
            </div>
            <div class="col-9">
                @RenderBody()
                <hr />
                <footer>
                    <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
                </footer>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/bootstrap")

    @RenderSection("scripts", required: false)

</body>
</html>

<script src="~/Scripts/toastr.js"></script>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

<script>

    $(document).ready(function () {
        $('input[type=datetime]').datepicker({
            dateFormat: 'yy/mm/dd',
            changeMonth: true,
            changeYear: true,
            yearRange: "-10:+10"
        });
        //to design data table
        $('#myTable').DataTable();
        // to Delete By chickboxes
        $("#parent").click(function () {
            $('.child').prop("checked", this.checked);
        });
        $('.child').click(function () {
            if ($('.child:checked').length == $('.child').length) {
                $("#parent").prop("checked", true);
            } else {
                $("#parent").prop("checked", false);
            }
        });
    });
    function DelMe(obj) {
        swal({
            title: 'Are You Sure ?',
            text: "You Won't be Able to revert this!",
            icon: 'warning'
        }).then((result) => {
            if (result) {
                var elem = $(obj);
                var id = elem.data("model-id");
                var url = "/coursetbls/DeleteAjax/" + id;
                $.ajax({
                    url: url,
                    type: "POST",
                    success: function () {
                        elem.closest("tr").remove();
                        toastr.success('Deleted !');
                    },
                    error: function () {
                        toastr.error('Failed !');
                    }
                });

            }
        })
    };


</script>
